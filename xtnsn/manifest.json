{
  "manifest_version": 2,
  "version": "1.0.001",
  "name": "DuoLingo virtual keyboard",
  "icons": {
    "128": "images/logo-128.png"
  },
  "description": "This extension allows you to use a virtual onscreen keyboard with customizable layouts. Adding automatic keyboard layout switching to both virtual and physical keyboards",
  "content_scripts": [{
    "run_at": "document_end",
    "matches": [
      "https://*.duolingo.com/*",
      "https://i-algurabi.github.io/DuoVirtKeyboard/*"
    ],
    "js": [
      "jquery.js",
      "DuoVirtKeyboard.user.js"
    ],
    "css": [
      "./css/style.css",
      "./css/rtl-duofix.css"
    ]
  }],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "<all_urls>",
    "https://*.duolingo.com/*",
    "https://duolingo.com/*",
    "https://*.cloudfront.net/*"
  ],
  "applications": {
    "gecko": {
      "id": "duoVirtKeyboard@i-algurabi.github.io",
      "strict_min_version": "53.0"
    }
  }
}
